<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/border_bottom">
        <ImageView
            android:id="@+id/btnBack"
            app:srcCompat="@drawable/arrow_back"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#103cc1"
            android:textSize="20sp"
            android:text="Cài đặt" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="40dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp">

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:hint="@string/username"
            android:textSize="13sp" />
        <EditText
            android:id="@+id/editRealName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:hint="Tên đầy đủ"
            android:textSize="13sp" />
        <EditText
            android:id="@+id/editOldPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="Mật khẩu cũ"
            android:textSize="13sp" />
        <EditText
            android:id="@+id/editNewPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="Mật khẩu mới"
            android:textSize="13sp" />
        <!--<EditText-->
            <!--android:id="@+id/editDob"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="35dp"-->
            <!--android:background="@drawable/bg_input"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:gravity="center"-->
            <!--android:hint="Sinh nhật (ngày/tháng/năm)"-->
            <!--android:textSize="13sp" />-->
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:hint="@string/email"
            android:textSize="13sp" />
        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:hint="Trích dẫn"
            android:textSize="13sp" />
        <LinearLayout
            android:id="@+id/ll_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textSize="12sp"
                android:background="@drawable/bg_button_white"
                android:textColor="#363636"
                android:text="Hủy"/>
            <Button
                android:id="@+id/btnSave"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:textSize="12sp"
                android:background="@drawable/button_green2"
                android:text="Lưu lại"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>